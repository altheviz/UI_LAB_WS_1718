                </FlexboxLayout>
                <FlexboxLayout flexDirection="row" class="{{ surf }}">
                    <Label text="Surf: "/>
                    <Label id="surf" text="{{ surf }}"/>
                </FlexboxLayout>
                <FlexboxLayout flexDirection="row" class="{{ waves }}">
                    <Label text="Waves: "/>
                    <Label id="waves" text="{{ waves }}"/>
                </FlexboxLayout>
                <FlexboxLayout flexDirection="row" class="{{ surge }}">
                    <Label text="Surge: "/>
                    <Label id="surge" text="{{ surge }}"/>
                </FlexboxLayout>
                <FlexboxLayout flexDirection="row" class="{{ wreck }}">
                    <Label text="Wreck: "/>
                    <Label id="wreck" text="{{ wreck }}"/>
                </FlexboxLayout>
                <FlexboxLayout flexDirection="row" class="{{ reef }}">
                    <Label text="Reef: "/>
                    <Label id="reef" text="{{ reef }}"/>
                </FlexboxLayout>
                <FlexboxLayout flexDirection="row" class="{{ deep }}">
                    <Label text="Deep: "/>
                    <Label id="deep" text="{{ deep }}"/>
                </FlexboxLayout>
                <FlexboxLayout flexDirection="row" class="{{ photo }}">
                    <Label text="Photo: "/>
                    <Label id="photo" text="{{ photo }}"/>
                </FlexboxLayout>
                <FlexboxLayout flexDirection="row" class="{{ drift }}">
                    <Label text="Drift: "/>
                    <Label id="drift" text="{{ drift }}"/>
                </FlexboxLayout>
                <FlexboxLayout flexDirection="row" class="{{ training }}">
                    <Label text="Training: "/>
                    <Label id="training" text="{{ training }}"/>
                </FlexboxLayout>
                <FlexboxLayout flexDirection="row" class="{{ survey }}">
                    <Label text="Survey: "/>
                    <Label id="survey" text="{{ survey }}"/>
                </FlexboxLayout>
                <FlexboxLayout flexDirection="row" class="{{ recovery }}">
                    <Label text="Recovery: "/>
                    <Label id="recovery" text="{{ recovery }}"/>
                </FlexboxLayout>

                <StackLayout class="separation-line"></StackLayout>
                <Label text="Temperature" class="settings-category"></Label>   
                
                <FlexboxLayout flexDirection="row">
                    <Label text="Temp. above: "/>
                    <Label id="aboveSurface" text="{{ aboveSurface }}"/>
                    <Label text=" °C/°F"/>
                </FlexboxLayout>
                <FlexboxLayout flexDirection="row">
                    <Label text="Temp. below: "/>
                    <Label id="belowSurface" text="{{ belowSurface }}"/>
