<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="onNavigatingTo" class="page">
	<Page.actionBar>
		<ActionBar class="action-bar">
      		<NavigationButton text="Go Back" android.systemIcon="ic_menu_back" tap="goBack" style="color: #ffffff"/>
			<Label class="action-bar-title" text="Anfrage senden"></Label>
    	</ActionBar>
		
	</Page.actionBar>
	<StackLayout orientation="vertical" > 
		<Label horizontalAlignment="center" fontSize="18" text="{{ heading }}" height="50" />       
        <TextView id="message" text="{{ invitation.message }}" hint="Nachricht" height="110" />
        <TextField id="dateField" hint="Ablaufsdatum" editable="false"  tap="selectDate"/>
		<Button text="Anfragen"  color="white" backgroundColor="#3A53FF" tap="invite" />
    </StackLayout>
</Page>