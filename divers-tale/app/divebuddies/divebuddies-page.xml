<Page
    navigatingTo="onNavigatingTo"  
    xmlns:nsDrawer="nativescript-pro-ui/sidedrawer"
    xmlns:myDrawer="shared/my-drawer"
    xmlns="http://www.nativescript.org/tns.xsd"
    xmlns:dd="nativescript-drop-down">

    <ActionBar class="action-bar">
        <!-- 
        Use the NavigationButton as a side-drawer button in Android because ActionItems are shown on the right side of the ActionBar
        -->
        <NavigationButton ios:visibility="collapsed" icon="res://menu" tap="onDrawerButtonTap"></NavigationButton>
        <!-- 
        Use the ActionItem for IOS with position set to left. Using the NavigationButton as a side-drawer button in iOS is not possible, because its function is to always navigate back in the application.
        -->
        <ActionItem icon="res://navigation/menu" 
            android:visibility="collapsed" 
            tap="onDrawerButtonTap"
            ios.position="left">
        </ActionItem>

        <ActionItem>
            <Label text="&#xf0c0;" class="font-awesome" style="color: #ffffff; padding-right: 35px; font-size: 25;" tap="newGroup"/>
        </ActionItem>


        <Label class="action-bar-title" text="Dive Buddies"></Label>
    </ActionBar>

    <!--
    RadSideDrawer is a UI component part of the Progress NativeScript UI set of components.
    Learn more about the RadSideDrawer UI component and how it can be customized in this documentation article:
    http://docs.telerik.com/devtools/nativescript-ui/Controls/NativeScript/SideDrawer/getting-started
    The RadSideDrawer component is designed to be used as a root element to the <Page> and
    it shouldn't have any other siblings other than the <ActionBar> component.
    -->
    <nsDrawer:RadSideDrawer id="sideDrawer" showOverNavigation="true">
        <!--
        Use the RadSideDrawer.drawerTransition component to change the open/close animation of the drawer.
        -->
        <nsDrawer:RadSideDrawer.drawerTransition>
            <nsDrawer:SlideInOnTopTransition/>
        </nsDrawer:RadSideDrawer.drawerTransition>

        <!--
        Use the RadSideDrawer.drawerContent component to display the content of the app drawer on this page.
        Always wrap content in a layout component.
        -->
        <nsDrawer:RadSideDrawer.drawerContent>
            <StackLayout>
                <!--
                Use {N} custom components to reuse UI across your mobile app.
                The MyDrawer custom component defined in "/shared/my-drawer" holds the contents of the app drawer.
                Learn more about custom components and how they can be used in this documentation article:
                http://docs.nativescript.org/ui/basics#custom-components
                -->
                <myDrawer:MyDrawer selectedPage="Divebuddies"/>
            </StackLayout>
        </nsDrawer:RadSideDrawer.drawerContent>

        <!--
        Use the RadSideDrawer.mainContent component to display the content of the page when you have an app drawer.
        Always wrap content in a layout component.
        -->
        <nsDrawer:RadSideDrawer.mainContent>
            <TabView>
                <TabView.items>
                <TabViewItem title="Buddies">
                    <TabViewItem.view>
                    <ListView items="{{ myDivebuddies }}">
                        <ListView.itemTemplate>
                        <GridLayout columns="auto, *,auto, auto">
                            <Label text="{{ nickname }}" textWrap="true" />
                            <Label text="&#xf234;" class="font-awesome" col="2" tap="addToGroup" />
                            <Label text="&#xf061;" class="font-awesome" col="3" tap="viewUserDetails" />
                        </GridLayout>
                        </ListView.itemTemplate>
                    </ListView>
                    </TabViewItem.view>
                </TabViewItem>
                <TabViewItem title="Groups">
                    <TabViewItem.view>
                        <!--<GridLayout columns="auto">-->
                            <ListView items="{{ myGroups }}" row="0" id="groupview">
                                <ListView.itemTemplate>
                                <GridLayout columns="auto, *,auto, auto">
                                    <Label text="{{ name }}" textWrap="true" />
                                    <Label text="&#xf068;" class="font-awesome" col="2" tap="deleteGroup" />
                                    <Label text="&#xf061;" class="font-awesome" col="3" tap="viewGroupDetails" />
                                </GridLayout>
                                </ListView.itemTemplate>
                            </ListView>
                            <!--<StackLayout orientation="vertical" row="1">
                                <Button cssClass="test" text="Refresh" tap="refresh"></Button>
                            </StackLayout>
                        </GridLayout>-->
                    </TabViewItem.view>
                </TabViewItem>
                <TabViewItem title="Search">
                    <TabViewItem.view>
                        <ScrollView>
                           <GridLayout horizontalAlignment="center" rows="auto, auto, auto, auto, auto, auto, auto, auto, auto" columns="auto, auto">
                                <Label text="Nickname: " row="0" col="0" textWrap="true" colSpan="1" length="20" />
                                <TextField id="nickname" text="{{ nickname }}" autocorrect="false" autocapitalizationType="none" row="0" col="1" width="600px" />
                                <Label text="Sex: " row="1" col="0" textWrap="true" colSpan="1" length="20" />
                                <dd:DropDown id="sex" items="{{ sex }}" selectedIndex="{{ selectedType }}" row="1" col="1" />
                                <Label text="Age: " row="2" col="0" textWrap="true" colSpan="1" length="20" />
                                <TextField id="age" text="{{ age }}" autocorrect="false" autocapitalizationType="none" row="2" col="1" width="600px" keyboardType="number" />       
                                <Label text="City: " row="3" col="0" textWrap="true" colSpan="1" length="20" />
                                <TextField id="city" text="{{ city }}" autocorrect="false" autocapitalizationType="none" row="3" col="1" width="600px" />     
                                <Label text="Region: " row="4" col="0" textWrap="true" colSpan="1" length="20" />
                                <TextField id="region" text="{{ region }}" autocorrect="false" autocapitalizationType="none" row="4" col="1" width="600px" />  
                                <Label text="Country: " row="5" col="0" textWrap="true" colSpan="1" length="20" />
                                <TextField id="country" text="{{ country }}" autocorrect="false" autocapitalizationType="none" row="5" col="1" width="600px" />             
                                <Label text="Experience: " row="6" col="0" textWrap="true" colSpan="1" length="20" />
                                <TextField id="experience" text="{{ experience }}" autocorrect="false" autocapitalizationType="none" row="6" col="1" width="600px" keyboardType="number" />                               
                                <Label text="Certificate: " row="7" col="0" textWrap="true" colSpan="1" length="20" />
                                <TextField id="certificate" text="{{ certificate }}" autocorrect="false" autocapitalizationType="none" row="7" col="1" width="600px" />  
                                <Button text="Search" tap="search" colSpan="2" row="8" col="0" />                             
                            </GridLayout>
                        </ScrollView>
                    </TabViewItem.view>
                </TabViewItem>
                </TabView.items>
            </TabView>
        </nsDrawer:RadSideDrawer.mainContent>
    </nsDrawer:RadSideDrawer>
</Page>
